.col-md-6.col-md-offset-3
    -if defined? title
        %h2=title
    .list-group
        - @tutors.each do |tutor|
            %a.list-group-item{href: "/tutors/#{tutor.id}"}
                %h4.list-group-item-heading
                    =tutor.name
                    -if tutor.inactive
                        %span.label.label-default Inactive
                %p.list-group-item-text=tutor.email
