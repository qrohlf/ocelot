.col-md-6.col-md-offset-3
    %h1 Login
    %form{method: 'post'}
        .form-group
            %label{for: "email"} Email address
            %input#email.form-control{placeholder: "Enter email", type: "email", name: "email", value: (defined? email) ? email : nil}
        .form-group
            %label{for: "password"} Password
            %input#password.form-control{placeholder: "Password", type: "password", name: "password"}
        %button.btn.btn-lg.btn-primary{type: "submit"} Log In
        .control-group.margin-vertical
            %p Want to create a new user? Click <a href='/users/new'>here</a>.